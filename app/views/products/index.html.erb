<div class="bg-white">
  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 sm:py-24">
    <div class="flex justify-between items-center border-b border-gray-200 pb-5">
      <div>
        <h1 class="text-4xl font-bold tracking-tight text-gray-900">Product Gallery</h1>
        <p class="mt-2 text-lg text-gray-500">Discover our premium windsurfing equipment</p>
      </div>
      <% if user_signed_in? %>
        <%= link_to new_product_path, class: "inline-flex items-center rounded-md bg-orange-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 transition-colors duration-200" do %>
          <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
          </svg>
          Add Product
        <% end %>
      <% end %>
    </div>

    <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
      <% @products.each do |product| %>
        <div class="group relative overflow-hidden rounded-2xl bg-gray-100 transition-all duration-300">
          <%= link_to product_path(product), class: "block aspect-[4/3] overflow-hidden" do %>
            <% if product.image.attached? %>
              <%= image_tag product.image, class: "h-full w-full object-cover object-center transform transition-transform duration-500 group-hover:scale-110" %>
            <% else %>
              <div class="flex h-full items-center justify-center bg-gray-200">
                <svg class="h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            <% end %>

          <% end %>

          <div class="p-6">
            <div class="flex items-center justify-between">
              <h3 class="text-xl font-semibold text-gray-900">
                <%= link_to product.name, product_path(product), class: "hover:text-orange-600 transition-colors duration-200" %>
              </h3>
              <p class="text-xl font-bold text-orange-600">$<%= number_with_precision(product.price, precision: 2) %></p>
            </div>

            <p class="mt-3 text-gray-600 line-clamp-2"><%= product.description %></p>

            <div class="mt-4 flex items-center gap-2 text-sm">
              <% if product.stock > 0 %>
                <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-green-700">
                  <svg class="-ml-0.5 mr-1.5 h-2 w-2 fill-green-500" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                  </svg>
                  In Stock
                </span>
                <span class="text-gray-500">(<%= product.stock %> available)</span>
              <% else %>
                <span class="inline-flex items-center rounded-full bg-red-100 px-2.5 py-0.5 text-red-700">
                  <svg class="-ml-0.5 mr-1.5 h-2 w-2 fill-red-500" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                  </svg>
                  Out of Stock
                </span>
              <% end %>
            </div>

            <div class="mt-6 flex gap-3">
              <%= button_to cart_items_path(product_id: product.id), 
                  class: "flex-1 rounded-lg bg-orange-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 transition-colors duration-200",
                  disabled: product.stock == 0 do %>
                Add to Cart
              <% end %>
              <%= link_to "View Details", product_path(product), 
                  class: "rounded-lg bg-white px-4 py-2.5 text-sm font-semibold text-orange-600 shadow-sm ring-1 ring-inset ring-orange-600 hover:bg-orange-50 transition-colors duration-200" %>
            </div>

            <% if user_signed_in? %>
              <div class="mt-4 flex gap-3 border-t border-gray-200 pt-4">
                <%= link_to edit_product_path(product), 
                    class: "flex-1 rounded-lg bg-white px-4 py-2.5 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 transition-colors duration-200" do %>
                  <span class="flex items-center justify-center gap-1">
                    <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M5.433 13.917l1.262-3.155A4 4 0 017.58 9.42l6.92-6.918a2.121 2.121 0 013 3l-6.92 6.918c-.383.383-.84.685-1.343.886l-3.154 1.262a.5.5 0 01-.65-.65z" />
                      <path d="M3.5 5.75c0-.69.56-1.25 1.25-1.25H10A.75.75 0 0010 3H4.75A2.75 2.75 0 002 5.75v9.5A2.75 2.75 0 004.75 18h9.5A2.75 2.75 0 0017 15.25V10a.75.75 0 00-1.5 0v5.25c0 .69-.56 1.25-1.25 1.25h-9.5c-.69 0-1.25-.56-1.25-1.25v-9.5z" />
                    </svg>
                    Edit
                  </span>
                <% end %>
                <%= button_to product_path(product), method: :delete,
                    class: "flex-1 rounded-lg bg-white px-4 py-2.5 text-sm font-semibold text-red-600 shadow-sm ring-1 ring-inset ring-red-600 hover:bg-red-50 transition-colors duration-200",
                    data: { turbo_confirm: "Are you sure you want to delete this product?" } do %>
                  <span class="flex items-center justify-center gap-1">
                    <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M8.75 1A2.75 2.75 0 006 3.75v.443c-.795.077-1.584.176-2.365.298a.75.75 0 10.23 1.482l.149-.022.841 10.518A2.75 2.75 0 007.596 19h4.807a2.75 2.75 0 002.742-2.53l.841-10.52.149.023a.75.75 0 00.23-1.482A41.03 41.03 0 0014 4.193V3.75A2.75 2.75 0 0011.25 1h-2.5zM10 4c.84 0 1.673.025 2.5.075V3.75c0-.69-.56-1.25-1.25-1.25h-2.5c-.69 0-1.25.56-1.25 1.25v.325C8.327 4.025 9.16 4 10 4zM8.58 7.72a.75.75 0 00-1.5.06l.3 7.5a.75.75 0 101.5-.06l-.3-7.5zm4.34.06a.75.75 0 10-1.5-.06l-.3 7.5a.75.75 0 101.5.06l.3-7.5z" clip-rule="evenodd" />
                    </svg>
                    Delete
                  </span>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @products.empty? %>
      <div class="mt-12 rounded-2xl bg-gray-50 px-6 py-12 text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 12H4M12 20V4" />
        </svg>
        <h3 class="mt-4 text-lg font-semibold text-gray-900">No products yet</h3>
        <p class="mt-2 text-gray-600">Get started by adding your first product to the gallery.</p>
        <div class="mt-6">
          <%= link_to new_product_path, class: "inline-flex items-center rounded-lg bg-orange-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 transition-colors duration-200" do %>
            <svg class="-ml-0.5 mr-1.5 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
            </svg>
            Add First Product
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
